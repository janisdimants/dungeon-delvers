            <string>/// Draw the player

// SHADOWS
shader_set(shd_shadow);
// Weapon
if (show_weapon) {
  draw_sprite_ext(
    weapon_sprite, weapon_img_index, x, y,
    1, 1, attack_direction, c_white, 1
  );
}

// Spell
if (show_spell) {
  draw_sprite_ext(
    spell_sprite, spell_img_index, x, y,
    1, 1, attack_direction, c_white, 1
  );
}
// Body
shader_reset();
draw_sprite(shadow, 0, x, y);

if (invinc_timer &gt; 0) {
  shader_set(shd_white);
}

if (state == dodge) {
  draw_sprite(dodge_sprite[face], dodge_img_index, x, y);
  exit;
}

var body_bob = bob_amount * body_bob_height;

// Body
draw_sprite(sprite_index, image_index, x, y - body_bob);

// Weapon
if (show_weapon) {
  var weapon_y = y - weapon_height - body_bob;
  draw_sprite_ext(
    weapon_sprite, weapon_img_index, x, weapon_y,
    1, 1, attack_direction, c_white, 1
  );
}

// Spell
if (show_spell) {
  var spell_y = y - spell_height - body_bob;
  draw_sprite_ext(
    spell_sprite, spell_img_index, x, spell_y,
    1, 1, attack_direction, c_white, 1
  );
}

// Head
draw_sprite(head, head_direction, x, y - body_bob);

shader_reset();

